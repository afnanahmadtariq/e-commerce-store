# =================================================
# E-Commerce Platform Environment Configuration
# =================================================

# Node Environment
NODE_ENV=development

# =================================================
# Service Ports
# =================================================
GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
CART_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004

# =================================================
# Service URLs (for inter-service communication)
# =================================================
GATEWAY_URL=http://localhost:3000
USER_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
CART_SERVICE_URL=http://localhost:3003
ORDER_SERVICE_URL=http://localhost:3004

# =================================================
# MongoDB Configuration
# =================================================
# Use MongoDB Atlas in production, local MongoDB in development
MONGODB_URI=mongodb://localhost:27017/ecommerce

# Individual service databases (optional - for true microservices)
# USER_SERVICE_MONGODB_URI=mongodb://localhost:27017/ecommerce_users
# PRODUCT_SERVICE_MONGODB_URI=mongodb://localhost:27017/ecommerce_products
# CART_SERVICE_MONGODB_URI=mongodb://localhost:27017/ecommerce_carts
# ORDER_SERVICE_MONGODB_URI=mongodb://localhost:27017/ecommerce_orders

# =================================================
# JWT Configuration
# =================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# =================================================
# CORS Configuration
# =================================================
CORS_ORIGIN=http://localhost:4200

# =================================================
# Redis Configuration (Optional - for caching)
# =================================================
# REDIS_URL=redis://localhost:6379

# =================================================
# File Upload Configuration
# =================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# =================================================
# Email Configuration (for verification emails)
# =================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@ecommerce.com

# =================================================
# Payment Configuration (Stripe/PayPal)
# =================================================
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# PAYPAL_CLIENT_ID=...
# PAYPAL_CLIENT_SECRET=...
