# =================================================
# E-Commerce Platform Environment Configuration
# =================================================

# Node Environment
NODE_ENV=development

# =================================================
# Service Configuration
# =================================================
HOST=localhost
PORT=3000

# Service URLs
# For local dev: http://localhost:PORT
# For Docker: http://service-name:PORT
USER_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
CART_SERVICE_URL=http://localhost:3003
ORDER_SERVICE_URL=http://localhost:3004
FRONTEND_URL=http://localhost:4200

# =================================================
# MongoDB Atlas Configuration
# =================================================
# Connection string for MongoDB Atlas cluster
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database names
USER_DB_NAME=ecommerce_users
PRODUCT_DB_NAME=ecommerce_products
CART_DB_NAME=ecommerce_carts
ORDER_DB_NAME=ecommerce_orders

# =================================================
# JWT Configuration
# =================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# =================================================
# CORS Configuration
# =================================================
CORS_ORIGIN=http://localhost:4200

# =================================================
# Email Configuration (SMTP)
# =================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
EMAIL_FROM=noreply@ecommerce.com
EMAIL_FROM_NAME=E-Commerce Store

# =================================================
# Redis Configuration
# =================================================
REDIS_URL=redis://localhost:6379

# =================================================
# Payment Configuration
# =================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal
PAYPAL_CLIENT_ID=your-client-id
PAYPAL_CLIENT_SECRET=your-client-secret
PAYPAL_MODE=sandbox
