# =================================================
# E-Commerce Platform Environment Configuration
# =================================================

# Node Environment
NODE_ENV=development

# =================================================
# Service Configuration
# =================================================
HOST=localhost
FRONTEND_URL=http://localhost:4200

# =================================================
# MongoDB Atlas Configuration
# =================================================
# Connection string for MongoDB Atlas cluster
# Each service uses a different database on the same cluster
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database names (appended to connection string)
USER_DB_NAME=ecommerce_users
PRODUCT_DB_NAME=ecommerce_products
CART_DB_NAME=ecommerce_carts
ORDER_DB_NAME=ecommerce_orders

# =================================================
# JWT Configuration
# =================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# =================================================
# CORS Configuration
# =================================================
CORS_ORIGIN=http://localhost:4200

# =================================================
# Email Configuration (SMTP)
# =================================================
# Gmail example: Use App Password, not regular password
# Go to: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here

# Email sender details
EMAIL_FROM=noreply@ecommerce.com
EMAIL_FROM_NAME=E-Commerce Store

# =================================================
# Alternative: SendGrid Configuration
# =================================================
# SENDGRID_API_KEY=SG.xxxxx

# =================================================
# Alternative: Amazon SES Configuration
# =================================================
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# =================================================
# Redis Configuration (Optional - for caching)
# =================================================
REDIS_URL=redis://localhost:6379

# =================================================
# File Upload Configuration
# =================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# =================================================
# Payment Configuration
# =================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal
PAYPAL_CLIENT_ID=your-client-id
PAYPAL_CLIENT_SECRET=your-client-secret
PAYPAL_MODE=sandbox

# =================================================
# Rate Limiting
# =================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
