# =================================================
# User Service Environment Configuration (Render)
# =================================================

NODE_ENV=production
PORT=3001

# MongoDB Configuration
# Connection string to your Atlas cluster
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=ecommerce_users

# JWT Configuration
# Ensure these match across services if tokens are shared/verified elsewhere
JWT_SECRET=your-production-jwt-secret
JWT_REFRESH_SECRET=your-production-refresh-secret
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Frontend URL (for email links, etc.)
FRONTEND_URL=https://your-frontend-app.onrender.com
CORS_ORIGIN=https://your-frontend-app.onrender.com

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ecommerce.com
EMAIL_FROM_NAME=E-Commerce Store
